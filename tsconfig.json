{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "sourceMap": true,
        "extendedDiagnostics": true
    },
    "include": ["src", "test"],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "types/types.play.ts",
        "**/*.spec.ts"
    ]
}
